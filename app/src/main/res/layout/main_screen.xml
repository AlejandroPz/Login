<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pef.login.menu_principal"
    tools:showIn="@layout/app_bar_menu_principal">


    <ImageButton
        android:id="@+id/imageButtonSS"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#b8ddcd"
        app:layout_constraintLeft_toRightOf="@id/imageButtonSH"
        app:layout_constraintTop_toBottomOf="@id/animation_view_nivel_rojo"
        app:srcCompat="@mipmap/ic_favorite_black_24dp" />

    <ImageButton
        android:id="@+id/imageButtonSH"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#b8ddcd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animation_view_nivel_rojo"
        app:srcCompat="@mipmap/ic_headset_black_24dp" />

    <ImageButton
        android:id="@+id/imageButtonSW"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#b8ddcd"
        app:layout_constraintRight_toLeftOf="@id/imageButtonSH"
        app:layout_constraintTop_toBottomOf="@id/animation_view_nivel_rojo"
        app:srcCompat="@mipmap/ic_watch_black_24dp" />

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/animation_view_nivel"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text_nivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/textNameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/animation_view_nivel"
        android:layout_marginBottom="2dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_nivel_rojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="circulo_niv_rojo.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_scale="0.40"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_nivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="circulo_niv.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_scale="0.40"
        />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_monday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="MON"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />

        <TextView
            android:id="@+id/text_tuesday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="TUE"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_wednesday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="WED"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_thursday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="THU"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_friday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="FRI"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_saturday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="SAT"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_sunday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="SUN"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
